# CUDA architectures (space separated) to emit native SASS for by default
CUDAARCHS = 86 90

# Legacy single-architecture option preserved for existing tooling
CUDAARCH = 90

# CUDA maximum register usage per thread
MAXREG = 179
#-Xptxas -v

# CUDA kernel block dimension 
BLOCKDIM = 64

# GPU workspace memory size
WORKSPACE = 0x400000

